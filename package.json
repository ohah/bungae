{
  "name": "bungae",
  "version": "0.0.1",
  "private": true,
  "description": "A lightning-fast React Native bundler powered by Bun",
  "keywords": [
    "bun",
    "bundler",
    "javascript",
    "metro",
    "react-native",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohah/bungae.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "bun run --filter='bungae' dev",
    "build": "bun run --filter='bungae' build",
    "test": "bun test packages/**",
    "test:watch": "bun test --watch packages/**",
    "test:coverage": "bun test --coverage packages/**",
    "lint": "oxlint --deny-warnings",
    "lint:fix": "oxlint --deny-warnings --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22",
    "bunup": "^0.16.20",
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
