{
  "name": "bungae",
  "version": "0.0.1",
  "private": true,
  "description": "A lightning-fast React Native bundler powered by Bun",
  "keywords": [
    "bun",
    "bundler",
    "javascript",
    "metro",
    "react-native",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohah/bungae.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "bun run --filter='bungae' dev",
    "build": "bun run --filter='bungae' build",
    "bungae:start": "bun run build && cd examples/ExampleApp && bun run start:bungae",
    "metro:start": "cd examples/ExampleApp && bun run start",
    "bungae:build": "bun run build && cd examples/ExampleApp && bun run build:bungae",
    "bungae:build:ios": "bun run build && cd examples/ExampleApp && bun run build:bungae --platform ios --mode release",
    "bungae:build:android": "bun run build && cd examples/ExampleApp && bun run build:bungae --platform android --mode release",
    "bundle:metro:ios": "cd examples/ExampleApp && bun run bundle:metro:ios",
    "bundle:metro:android": "cd examples/ExampleApp && bun run bundle:metro:android",
    "test": "bun test packages/**",
    "test:watch": "bun test --watch packages/**",
    "test:coverage": "bun test --coverage packages/**",
    "lint": "oxlint --deny-warnings",
    "lint:fix": "oxlint --deny-warnings --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "babel-plugin-syntax-hermes-parser": "^0.33.3",
    "babel-plugin-transform-flow-enums": "^0.0.2",
    "flow-parser": "^0.297.0",
    "hermes-parser": "^0.33.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22",
    "bunup": "^0.16.20",
    "flow-remove-types": "^2.297.0",
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
