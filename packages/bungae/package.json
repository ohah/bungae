{
  "name": "bungae",
  "version": "0.0.1",
  "description": "A lightning-fast React Native bundler powered by Bun",
  "keywords": [
    "bun",
    "bundler",
    "fast",
    "javascript",
    "metro",
    "react-native",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohah/bungae.git",
    "directory": "packages/bungae"
  },
  "bin": {
    "bungae": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/cli.js"
      },
      "require": {
        "types": "./dist/cli.d.cts",
        "default": "./dist/cli.cjs"
      }
    }
  },
  "scripts": {
    "dev": "bunup --watch",
    "build": "bunup && chmod +x dist/cli.cjs",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/plugin-transform-react-jsx": "^7.28.6",
    "@babel/preset-flow": "^7.27.1",
    "@swc/core": "^1.7.0",
    "babel-plugin-syntax-hermes-parser": "^0.33.0",
    "bun": "^1.3.6",
    "bunup": "^0.16.20",
    "metro-runtime": "^0.83.3",
    "oxc-parser": "^0.108.0",
    "oxc-transform": "^0.108.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
