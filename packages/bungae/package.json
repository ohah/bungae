{
  "name": "bungae",
  "version": "0.0.1",
  "description": "A lightning-fast React Native bundler powered by Bun",
  "keywords": [
    "bun",
    "bundler",
    "fast",
    "javascript",
    "metro",
    "react-native",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohah/bungae.git",
    "directory": "packages/bungae"
  },
  "bin": {
    "bungae": "./dist/entry.cjs"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cli": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.js"
      },
      "require": {
        "types": "./dist/main.d.cts",
        "default": "./dist/main.cjs"
      }
    }
  },
  "scripts": {
    "dev": "bun cli/build.ts --watch",
    "build": "bun cli/build.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@babel/generator": "^7.28.6",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/plugin-transform-private-methods": "^7.28.6",
    "@babel/plugin-transform-private-property-in-object": "^7.28.6",
    "@babel/plugin-transform-react-jsx": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-flow": "^7.27.1",
    "@babel/traverse": "^7.28.6",
    "@babel/types": "^7.28.6",
    "@react-native-community/cli-server-api": "^15.0.0",
    "@react-native/dev-middleware": "^0.83.1",
    "@swc/core": "^1.15.11",
    "babel-plugin-syntax-hermes-parser": "^0.33.3",
    "babel-plugin-transform-define": "^2.1.4",
    "babel-plugin-transform-flow-enums": "^0.0.2",
    "bun": "^1.3.6",
    "flow-parser": "^0.297.0",
    "flow-remove-types": "^2.298.0",
    "hermes-parser": "^0.33.3",
    "jsc-safe-url": "^0.2.2",
    "metro-runtime": "^0.83.3",
    "metro-source-map": "^0.83.3",
    "oxc-parser": "^0.108.0",
    "oxc-transform": "0.111.0",
    "source-map": "^0.7.4",
    "terser": "^5.15.0",
    "vlq": "^2.0.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.27.1",
    "@babel/plugin-transform-arrow-functions": "^7.27.1",
    "@babel/plugin-transform-async-generator-functions": "^7.28.6",
    "@babel/plugin-transform-classes": "^7.28.6",
    "@babel/plugin-transform-computed-properties": "^7.28.6",
    "@babel/plugin-transform-destructuring": "^7.28.5",
    "@babel/plugin-transform-function-name": "^7.27.1",
    "@babel/plugin-transform-literals": "^7.27.1",
    "@babel/plugin-transform-named-capturing-groups-regex": "^7.27.1",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.28.6",
    "@babel/plugin-transform-numeric-separator": "^7.28.6",
    "@babel/plugin-transform-object-rest-spread": "^7.28.6",
    "@babel/plugin-transform-optional-catch-binding": "^7.28.6",
    "@babel/plugin-transform-optional-chaining": "^7.28.6",
    "@babel/plugin-transform-parameters": "^7.27.7",
    "@babel/plugin-transform-shorthand-properties": "^7.27.1",
    "@babel/plugin-transform-spread": "^7.28.6",
    "@babel/plugin-transform-sticky-regex": "^7.27.1",
    "@babel/plugin-transform-typescript": "^7.28.6",
    "@react-native/babel-plugin-codegen": "^0.83.1",
    "@react-native/babel-preset": "^0.83.1",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.5",
    "@types/bun": "latest",
    "@types/ws": "^8.5.10",
    "babel-plugin-minify-dead-code-elimination": "^0.5.2",
    "babel-plugin-minify-simplify": "^0.5.1",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
