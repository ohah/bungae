{
  "typescript.tsdk": "node_modules/typescript/lib",
  "oxc.enable": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    // Exclude build output folders, but keep source code build folders visible
    "**/dist": true,
    "**/out": true,
    "**/.bungae": true,
    "**/.bungae-cache": true
  },
  // Don't exclude files based on .gitignore (show source code build folders)
  "explorer.excludeGitIgnore": false,
  "[json]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  }
}
